{
  "name": "nova-tv",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "pnpm gen:runtime && pnpm gen:manifest && pnpm clean:cache && next dev -H 0.0.0.0",
    "dev:legacy": "pnpm gen:runtime && pnpm gen:manifest && next dev -H 0.0.0.0",
    "build": "pnpm gen:runtime && pnpm gen:manifest && next build && pnpm copy:static",
    "build:legacy": "pnpm gen:runtime && pnpm gen:manifest && next build && pnpm copy:static",
    "clean:cache": "rm -rf .next && rm -rf node_modules/.cache",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit --incremental false",
    "commitlint": "commitlint",
    "commitlint:last": "commitlint --from HEAD~1 --to HEAD --verbose",
    "gen:runtime": "node scripts/convert-config.js",
    "gen:manifest": "node scripts/generate-manifest.js",
    "gen:version": "node scripts/generate-version.js",
    "copy:static": "cp -r .next/static .next/standalone/.next/ && cp -r public .next/standalone/ || echo 'Standalone directory not found, skipping static copy'",
    "postbuild": "echo 'Build completed - sitemap generation disabled'",
    "prepare": "husky install",
    "pages:build": "pnpm gen:runtime && pnpm gen:manifest && next build && npx @cloudflare/next-on-pages --experimental-minify",
    "start:prod": "node .next/standalone/server.js"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@upstash/redis": "^1.35.8",
    "@vidstack/react": "^1.12.13",
    "artplayer": "^5.3.0",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "hls.js": "^1.6.15",
    "lucide-react": "^0.438.0",
    "media-icons": "^1.1.5",
    "next": "^15.5.9",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "redis": "^4.7.1",
    "sweetalert2": "^11.26.10",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.4.0",
    "vidstack": "^0.6.15",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@types/node": "24.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.9",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "eslint --fix"
    ]
  }
}
